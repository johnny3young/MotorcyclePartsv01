<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recycler_list"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/id_fecha"
            android:text="01/01/2019"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"/>
    <TextView
            android:id="@+id/id_repuesto_cambio"
            android:text="Kit de arraste"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtviewitem" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="5dp"/>
    <TextView
            android:id="@+id/id_kilometraje_actual"
            android:text="55.000 kms"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtviewkmactual" android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"/>
    <TextView
            android:id="@+id/id_kilometraje_proximo_cambio"
            android:text="70.000"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtviewkmcambio" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="5dp"/>
    <TextView
            android:id="@+id/id_duracion_kilometraje"
            android:text="2.500"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtviewkmduracion" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="@+id/txtviewkmduracion" android:layout_marginLeft="32dp"/>
    <TextView
            android:id="@+id/id_precio"
            android:text="30.000"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtviewprecio" android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"/>

    <TextView
            android:id="@+id/id_empresa"
            android:text="Johnny´s Motorcycle"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_local" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="5dp"/>
    <TextView
            android:text="Fecha de instalación"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Respuesto o cambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtviewitem"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp"/>
    <TextView
            android:text="Kilometraje Actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtviewkmactual" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/id_fecha" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"/>
    <TextView
            android:text="Duracion (kms)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtviewkmduracion" android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/txtviewkmactual"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtviewkmcambio" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/txtviewkmcambio" android:layout_marginRight="20dp"/>
    <TextView
            android:text="Kilometraje para cambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtviewkmcambio" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/id_repuesto_cambio"/>
    <TextView
            android:text="Precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtviewprecio" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/id_kilometraje_actual"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
    <TextView
            android:text="Local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_local" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/id_kilometraje_proximo_cambio"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp" android:layout_marginRight="5dp"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="2dp" app:layout_constraintGuide_begin="-10dp" android:id="@+id/guideline2"
            android:visibility="visible"/>


</android.support.constraint.ConstraintLayout>